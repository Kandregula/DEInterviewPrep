/*
https://datalemur.com/questions/laptop-mobile-viewership

nulls are not considered in count function
*/

SELECT 
  sum(case when device_type = 'laptop' then 1 else 0 end) laptop_views
  ,sum(case when device_type in ('tablet','phone') then 1 else 0 end) mobile_views
FROM viewership;

SELECT 
  count(case when device_type = 'laptop' then 1 else null end) laptop_views
  ,count(case when device_type in ('tablet','phone') then 1 else null end) mobile_views
FROM viewership;
